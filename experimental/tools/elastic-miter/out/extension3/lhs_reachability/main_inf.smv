#include "extension3_lhs.smv"


MODULE bool_input_inf(nReady0)
    VAR outs : boolean;
    
    -- make sure outs is persistent
    ASSIGN
    next(outs) := case 
      outs_valid & !nReady0 : outs;
      TRUE : {TRUE, FALSE};
    esac;
    DEFINE outs_valid := TRUE;

MODULE sink_main (ins_valid)
  DEFINE ins_ready   := TRUE;

MODULE main

  VAR seq_generator_arg : bool_input_inf(extension3_lhs.arg_ready);

  VAR extension3_lhs : extension3_lhs (seq_generator_arg.outs, seq_generator_arg.outs_valid, sink_res.ins_ready);

  VAR sink_res : sink_main(extension3_lhs.res_valid);

