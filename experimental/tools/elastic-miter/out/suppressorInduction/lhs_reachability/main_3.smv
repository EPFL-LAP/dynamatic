#include "suppressorInduction_lhs.smv"


MODULE bool_input_exact(nReady0, exact_tokens)
  VAR outs : boolean;
  VAR counter : 0..31;
  ASSIGN
    init(counter) := 0;
    next(counter) := case
      nReady0 & counter < exact_tokens : counter + 1;
      TRUE : counter;
    esac;

  -- make sure outs is persistent
  ASSIGN
    next(outs) := case
      outs_valid & !nReady0 : outs;
      TRUE : {TRUE, FALSE};
    esac;

  DEFINE outs_valid := counter < exact_tokens;

MODULE sink_main (ins_valid)
  DEFINE ins_ready   := TRUE;

MODULE main

  VAR seq_generator_short : bool_input_exact(suppressorInduction_lhs.short_ready, 3);
  VAR seq_generator_A_in : bool_input_exact(suppressorInduction_lhs.A_in_ready, 3);

  VAR suppressorInduction_lhs : suppressorInduction_lhs (seq_generator_short.outs, seq_generator_short.outs_valid, seq_generator_A_in.outs, seq_generator_A_in.outs_valid, sink_B_out.ins_ready);

  VAR sink_B_out : sink_main(suppressorInduction_lhs.B_out_valid);

