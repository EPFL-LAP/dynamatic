{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.useTabStops": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
  "files.associations": {
    "*.inc": "cpp",
    "__bit_reference": "cpp",
    "__hash_table": "cpp",
    "__split_buffer": "cpp",
    "__tree": "cpp",
    "array": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "initializer_list": "cpp",
    "list": "cpp",
    "map": "cpp",
    "regex": "cpp",
    "set": "cpp",
    "span": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "valarray": "cpp",
    "vector": "cpp",
    "format": "cpp",
    "ranges": "cpp",
    "text_encoding": "cpp",
    "chrono": "cpp",
    "tuple": "cpp",
    "variant": "cpp",
    "utility": "cpp",
    "scoped_allocator": "cpp",
    "memory_resource": "cpp",
    "__locale": "cpp",
    "functional": "cpp"
  },
  "cmake.configureSettings": {
    "MLIR_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/mlir",
    "LLVM_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/llvm",
    "CLANG_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/clang",
    "CMAKE_C_COMPILER": "clang",
    "CMAKE_CXX_COMPILER": "clang++",
    "LLVM_ENABLE_LLD": "ON",
    "LLVM_TARGETS_TO_BUILD": "host",
    "CMAKE_BUILD_TYPE": "Debug",
    "CMAKE_EXPORT_COMPILE_COMMAND": "ON"
  }
}
