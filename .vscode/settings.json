{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.useTabStops": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
  "files.associations": {
    "*.inc": "cpp",
    "algorithm": "cpp",
    "cmath": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "string": "cpp",
    "typeinfo": "cpp",
    "cstdlib": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "type_traits": "cpp",
    "vector": "cpp",
    "__config": "cpp",
    "__verbose_abort": "cpp",
    "array": "cpp",
    "clocale": "cpp",
    "cstdarg": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "list": "cpp",
    "optional": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "string_view": "cpp",
    "tuple": "cpp",
    "unordered_map": "cpp",
    "variant": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "exception": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "utility": "cpp",
    "cinttypes": "cpp",
    "regex": "cpp",
    "locale": "cpp"
  },
  "cmake.configureSettings": {
    "MLIR_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/mlir",
    "LLVM_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/llvm",
    "CLANG_DIR": "${workspaceFolder}/polygeist/llvm-project/build/lib/cmake/clang",
    "CMAKE_C_COMPILER": "clang",
    "CMAKE_CXX_COMPILER": "clang++",
    "LLVM_ENABLE_LLD": "ON",
    "LLVM_TARGETS_TO_BUILD": "host",
    "CMAKE_BUILD_TYPE": "Debug",
    "CMAKE_EXPORT_COMPILE_COMMAND": "ON"
  }
}
